programa
{
	
inteiro num1=0
	inteiro num2=0
	inteiro num3=0
	inteiro valor=0
	funcao inicio()
	{
		escreva("escreva um valor =")
		leia(num1)

		escreva("escreva outro valor =")
		leia(num2)

		escreva("escreva mais um valor =")
		leia(num3)

		soma(num1,num2,num3)
	}

	funcao soma(inteiro num1,inteiro num2,inteiro num3){
     escreva(num1+num2+num3)
